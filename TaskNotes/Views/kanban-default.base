filters:
  and:
    - file.hasTag("task")
views:
  - type: tasknotesKanban
    name: Kanban Board
    groupBy:
      property: Status
      direction: ASC
    order:
      - status
      - priority
      - scheduled
      - file.tags
      - recurrence
      - complete_instances
      - dateCreated
    sort:
      - property: dateCreated
        direction: DESC
    options:
      columnWidth: 280
      hideEmptyColumns: false
